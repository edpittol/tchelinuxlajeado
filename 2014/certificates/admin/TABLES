#DROP TABLE IF EXISTS participacao;
#DROP TABLE IF EXISTS participantes;
#DROP TABLE IF EXISTS palestras;
DROP TABLE IF EXISTS certificados;
CREATE TABLE IF NOT EXISTS certificados (
    certificate_code VARCHAR(32),
    event DATE,
    participante_id integer references participantes(id),
    PRIMARY KEY (event, participante_id)
);
CREATE TABLE IF NOT EXISTS palestras (
    id SERIAL PRIMARY KEY,
    titulo VARCHAR(150),
    duracao INTEGER
);
CREATE TABLE IF NOT EXISTS participantes (
    id SERIAL PRIMARY KEY,
    nome VARCHAR(100),
    email VARCHAR(255) UNIQUE
);
CREATE TABLE IF NOT EXISTS participacao (
    participante_id integer references participantes(id),
    palestra_id integer references palestras(id),
    PRIMARY KEY (participante_id, palestra_id)
);

